<Application
    x:Class="Gates.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gates"
    RequestedTheme="Light"
    >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml" />
                <ResourceDictionary Source="/Themes/TextStyles.xaml" />
                <ResourceDictionary Source="/Themes/EditorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <x:String x:Key="AppName">Gates</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application> <!--TODO: Cache background images for all GElements-->
